{
  "manifest_version": 2,
  "name": "Highlight-2-Flash",
  "description": "Chrome extension enabling users to create flashcards based on highlighted text",
  "version": "0.0.0.1",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Highlight-2-Text Manager",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [],
      "js": ["content.js"]
    }
  ]
}
